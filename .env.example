# サーバー設定
PORT=3000
NODE_ENV=development

# データベース設定
MONGODB_URI=mongodb://localhost:27017/extbridge

# 認証設定
# SAML設定
SAML_ENTRY_POINT=https://extic.example.com/saml/sso
SAML_ISSUER=extbridge
SAML_CALLBACK_URL=http://localhost:3000/auth/saml/callback
SAML_CERT=

# JWT設定
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=1d

# Extic連携設定
EXTIC_API_URL=https://api.extic.example.com
EXTIC_API_KEY=your_api_key_here
EXTIC_CLIENT_ID=your_client_id_here

# 外部サービス連携設定
# GitHub
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_CALLBACK_URL=http://localhost:3000/auth/github/callback

# Figma
FIGMA_CLIENT_ID=your_figma_client_id
FIGMA_CLIENT_SECRET=your_figma_client_secret
FIGMA_CALLBACK_URL=http://localhost:3000/auth/figma/callback

# Slack
SLACK_CLIENT_ID=your_slack_client_id
SLACK_CLIENT_SECRET=your_slack_client_secret
SLACK_CALLBACK_URL=http://localhost:3000/auth/slack/callback

# ログ設定
LOG_LEVEL=info
LOG_FILE=logs/extbridge.log
